@model Web.Models.Post

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;" >Nova priča</h2>

@using (Html.BeginForm())  
{
 <div style="border-radius: 10%; border: 1px solid #73AD21;" >
            <div style="margin: 1%"> 
                <b> @Html.DisplayNameFor(model => model.Author): </b>
                @Html.EditorFor(model => model.Author) 
                @Html.ValidationMessageFor(model => model.Author) 
                
                <b> @Html.DisplayNameFor(model => model.Title): </b>
                @Html.EditorFor(model => model.Title) 
                @Html.ValidationMessageFor(model => model.Title) 
        
                <b> @Html.DisplayNameFor(model => model.Tag): </b>
                @Html.EditorFor(model => model.Tag) 
                @Html.ValidationMessageFor(model => model.Tag) 
            </div>
            <div style="margin: 1%">
                <b>  @Html.DisplayNameFor(model => model.Content): </b>
                @Html.EditorFor(model => model.Content,  new { @class = "text-box multi-line"} ) 
                @Html.ValidationMessageFor(model => model.Content) 
            </div>  
   <div style="margin: 1%">
    <input type="submit"  class="btn btn-primary" value="Spremi" style="background: #73AD21;" /> 
    </div>
</div>
}

<script>
function setActiveTab()
{
	$("#navbar li").removeClass("active");
	$("#post").addClass("active");
}
</script>
